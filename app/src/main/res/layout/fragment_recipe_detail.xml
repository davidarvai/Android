<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="RecipeDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewCount,UselessParent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <ImageView
                android:id="@+id/recipeDetailImageView"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:contentDescription="RecipeImage"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/recipeDetailTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#4CAF50"/>

            <TextView
                android:id="@+id/recipeDetailDescriptionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <!-- Ingredients -->
            <TextView
                android:id="@+id/ingredientsTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/ingredientsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!-- Instructions -->
            <TextView
                android:id="@+id/instructionsTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/instructionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!-- Nutrition -->
            <TextView
                android:id="@+id/nutritionTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrition Information"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/recipeNutritionDetailsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableLayout>
    </ScrollView>
</FrameLayout>